<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hub_delivery_view_form" model="ir.ui.view">
        <field name="name">hub.delivery.form</field>
        <field name="model">hub.delivery</field>
        <field name="arch" type="xml">
            <form>
                <group>
                    <group>
                      <field name="state_group_id"/>
                      <field name="delivery"/>
                    </group>
                </group>
                <footer>
                    <button name="button_confirm" type="object" string="Add" class="btn-primary" data-hotkey="q"/>
                    <button string="Discard" special="cancel" data-hotkey="z" class="btn-secondary"/>
                </footer>
            </form>
        </field>
    </record>
</odoo>
