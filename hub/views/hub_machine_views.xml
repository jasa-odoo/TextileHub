<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <record id="hub_machine_action" model="ir.actions.act_window">
        <field name="name">Machines</field>
        <field name="res_model">machine.info</field>
        <field name="view_mode">tree,form</field>
        <field name="context">{'search_default_available':True}</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add Your First Product
            </p>
        </field>
    </record>
    <!-- Tree view  -->
    <record id="hub_machine_tree_view" model="ir.ui.view">
        <field name="name">hub.machine.tree</field>
        <field name="model">machine.info</field>
        <field name="arch" type="xml">
            <tree decoration-success = "state=='in_stock'" decoration-danger="state=='out_stock'">
                <field name="name"/>
                <field name="machine_type_id"/>
                <field name="production_capacity"/>
                <field name="power"/>
                <field name="price"/>
                <field name="machine_heads" optional="hide"/>
                <field name="state"/>
            </tree>
        </field>
    </record>
    <!-- form view  -->
    <record id="hub_machine_form_view" model="ir.ui.view">
        <field name="name">hub.machine.form</field>
        <field name="model">machine.info</field>
        <field name="arch" type="xml">
            <form>
            <header>
                <field name="state" widget="statusbar" options = "{'clickable' : '1'}"/>
                <button name="action_stock_in" string="Stock In" type="object" class="oe_highlight"/>
                <button name="action_stock_out" string="Stock Out" type="object"/>
            </header>
                <sheet>
                <widget name="web_ribbon" title="In Stock" bg_color="bg-success" attrs="{'invisible': [('state', '!=', 'in_stock')]}"/>
                 <widget name="web_ribbon" title="Out of Stock" bg_color="bg-danger" attrs="{'invisible': [('state', '!=', 'out_stock')]}"/>
                    <div>
                        <h1>
                            <field name="name"/>
                        </h1>
                    </div>
                    <br></br>
                    <group>
                        <group col="3">
                            <field name="machine_type_id"/>
                            <field name="production_capacity"/>
                            <field name="price"/>
                            <field name="date_avilability"/>
                            <field name="power"/>
                            <field name="operating_type_id"/>
                        </group>
                        <group col="1">
                            <field name="machine_image" widget="image" nolabel="1"/>
                        </group>
                    </group>
                    <notebook>
                        <page string="Description">
                            <group>
                                <field name="description"/>
                            </group>
                            <group col="3">
                                <group>
                                    <field name="material_type_id" widget="many2many_tags"/>
                                    <field name="machine_heads"/>
                                    <field name="temperature_req"/>
                                </group>
                                <group>
                                    <field name="delivery_time"/>
                                    <field name="payment_term_id"/>
                                </group>
                            </group>
                        </page>
                        <page string="Delivery">
                        <group>
                            <field name="state_group_id"/>
                            <field name="states_id" widget="many2many_tags"/>
                            <!-- <field name= "state_id" /> -->
                            <field name="delivery_time"/>                   
                        </group>
                        </page>
                    </notebook>
                </sheet>
            </form>
        </field>
    </record>
    <record id="hub_machine_search_view" model="ir.ui.view">
        <field name="name">hub.machine.search</field>
        <field name="model">machine.info</field>
        <field name="arch" type="xml">
            <search>
                <field name="name"/>
                <field name="price"/>
                <field name="machine_type_id"/>
                <field name="operating_type_id"/>
                <filter name="available" string="Available" domain="[('state','=','in_stock')]"/>
            </search>
        </field>
    </record>
</odoo>