<?xml version="1.0" encoding="utf-8"?>

<odoo>
    <record id="machine_payment_term_action" model="ir.actions.act_window">
        <field name="name">Payment Terms</field>
        <field name="res_model">machine.payment.term</field>
        <field name="view_mode">tree,form</field>
        <field name="help" type="html">
            <p class="o_view_nocontent_smiling_face">
                Add First Payment Term
            </p>
        </field>
    </record>

    <record id="machine_payment_term_tree_view" model="ir.ui.view">
        <field name="name">machine.payment.term.tree.view</field>
        <field name="model">machine.payment.term</field>
        <field name="arch" type="xml">
            <tree>
                <field name="sequence" widget="handle"/>
                <field name="name"/>
            </tree>
        </field>
    </record>
</odoo>