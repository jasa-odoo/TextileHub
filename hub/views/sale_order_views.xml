<?xml version="1.0" encoding="utf-8"?>
    <odoo>
    <record id="sale_order_form_quote" model="ir.ui.view">
        <field name="name">sale.order.form.inherit.hub</field>
        <field name="model">sale.order</field>
        <field name="inherit_id" ref="sale.view_order_form"/>
        <field name="arch" type="xml">

            <field name="sale_order_template_id" position="after">
                <field name="delivery_days"
                    options="{'no_create': True}" attrs="{'invisible': [('state_group_id','!=',1)]}"/>
                <field name="state_group_id" attrs="{'invisible': [('state_group_id','!=',1)]}"/>
            </field>
        </field>
    </record>
</odoo>
